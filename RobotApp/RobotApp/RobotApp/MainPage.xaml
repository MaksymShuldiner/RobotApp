<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RobotApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Robot App" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Choose a message" HorizontalTextAlignment="Center" FontSize="Title"/>
        <StackLayout Padding="20,0,20,0" Spacing="10">
            <Entry x:Name="BluetoothName" Placeholder="Bluetooth Name"
                VerticalOptions="Start"
                HorizontalOptions="FillAndExpand" />
            <Entry x:Name="BluetoothMessage" Placeholder="Bluetooth Message"
                VerticalOptions="Start"
                HorizontalOptions="FillAndExpand" />
            <Button Text="Submit" VerticalOptions="EndAndExpand" Clicked="Message_Sent"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
