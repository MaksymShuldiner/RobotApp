<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RobotApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Robot App" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Choose a message" HorizontalTextAlignment="Center" FontSize="Title"/>
        <StackLayout Padding="20,0,20,0" Spacing="10">
            <Picker x:Name="BluetoothPoints" Title="Bluetooth hotspots" HorizontalOptions="FillAndExpand">
            </Picker>
            <Picker x:Name="WifiPoints" Title="Wifi hotspots" HorizontalOptions="FillAndExpand">
            </Picker>
            <Button Text="Load Wifi Hotspots" VerticalOptions="EndAndExpand" Clicked="LoadWifiHotspots"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
